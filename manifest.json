{
  "manifest_version": 3,
  "name": "Type Less Alma",
  "version": "2",
  "description": "Hotfix for the Alma barcode scanning problem.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://ucla.alma.exlibrisgroup.com/*"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "icons/icon.png",
    "128": "icons/icon.png",
    "32": "icons/icon.png",
    "24": "icons/icon.png",
    "64": "icons/icon.png"
  }
}
